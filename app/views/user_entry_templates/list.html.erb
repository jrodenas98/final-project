

<div class="container">
<div class = "row">
  <div class="col-md-3"></div> 
  <div class="col-md-6"> 
    <center><h1><%= current_user.first_name %>'s Journal</h1></center>
  </div>
  <div class="col-md-3"></div>
</div>
<hr>
<div class = "row">

  <div class="col-md-12"> 
     Welcome to your digital journal! Choose one of the four prompts you want to write today.
  </div>

</div>
<hr>
<div class="card-deck">

    
    <div class="card border-primary mb-3">
      <div class ="card-body">
      <h5 class="card-title"> TLC Journal</h5>
      <p class="card-text">
        You're on Day <%= @next_TLC_prompt.day %> </p>
      <a href="/new_user_entry_form/<%= @next_TLC_prompt.id%>" class="btn btn-primary">Write</a>
      
      </div>
    </div>
    
    <div class="card border-primary mb-3">
      <div class ="card-body">
      <h5 class="card-title"> 3-Act Journal</h5>
      <p class="card-text">
        You're on Day <%= @next_3Act_prompt.day %>
      </p>
      <a href="/new_user_entry_form/<%= @next_3Act_prompt.id %>" class="btn btn-primary">Write </a>
      
      </div>
    </div>
    
    <div class="card border-primary mb-3">
      <div class ="card-body">
      <h5 class="card-title"> Gratitude Journal</h5>
        <p class="card-text">You're on Day <%= @next_Gratitude_prompt.day %>
        </p>
      <a href="/new_user_entry_form/<%= @next_Gratitude_prompt.id%>" class="btn btn-primary">Write </a>
      </div>
    </div>
    
    <div class="card border-primary mb-3">
      <div class ="card-body">
      <h5 class="card-title"> Goal Journal</h5>
        <p class="card-text">
        You're on Day <%= @next_Goal_prompt.day %> </p>
        <a href="/new_user_entry_form/<%= @next_Goal_prompt.id%>" class="btn btn-primary">Write </a>
      </div>
    </div>
    
    
</div>
<hr>

<div class="row">

<table class="table table-hover">
  <tr>

    <th>
      Journal Method
    </th>

    <th>
      Headline
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @user_entries.each do |user_entry| %>
  <tr>

    <td>
      <%= JournalMethod.where(:id => user_entry.journal_method_id).first.name %>
    </td>


    <td>
      <%= user_entry.headline %>
    </td>

    <td>
      <%= time_ago_in_words(user_entry.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(user_entry.updated_at) %> ago
    </td>

    <td>
      <a href="/user_entries/<%= user_entry.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>

</div>

</div>