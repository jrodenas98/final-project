<h1>
  Edit quote #<%= @quote.id %>
</h1>

<hr>

<%= render("quote_templates/validation_failures.html.erb") %>

<form action="/update_quote_record/<%= @quote.id %>" method="post">
  <div>
    <label for="body">
      Body
    </label>

    <input type="text" id="body" name="body" value="<%= @quote.body %>">
  </div>

  <div>
    <label for="author">
      Author
    </label>

    <input type="text" id="author" name="author" value="<%= @quote.author %>">
  </div>

  <button>
    Update quote
  </button>
</form>

<hr>

<a href="/quotes">
  Go back
</a>
